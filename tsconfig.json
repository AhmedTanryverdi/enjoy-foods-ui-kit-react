{
	"compilerOptions": {
		"target": "es2017",                    // Вместо "es5"
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			// Добавляем пути к удалённым модулям
			"auth/*": ["auth-module/src/*"],
			"payment/*": ["payment-module/src/*"]
		},
		// Явно указываем источники типов
		"typeRoots": [
			"node_modules/@types",
			"auth-module/dist/types",
			"payment-module/dist/types"
		],
		"types": ["node", "jest","react", "react-dom", "jest-dom", "testing-library__jest-dom"]
	},
	"include": [
		"host-app/src/**/*",
		"auth-module/src/**/*",
		"payment-module/src/**/*"
	],
	"exclude": ["node_modules", "dist"],
	// Для монорепозитория (если модули в одной папке)
	"references": [
		{ "path": "auth-module" },
		{ "path": "payment-module" }
	]
}
